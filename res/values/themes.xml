<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.T201" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/cyan</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!--    ESTILOS TEXT VIEW CALCULADORA-->
    <style name='Theme.201.calculadora_textView' parent='Theme.T201'>
        <item name='android:layout_width'>match_parent</item>
        <item name='android:layout_height'>match_parent</item>
        <item name='android:textAlignment'>textEnd</item>
        <item name='android:fontFamily'>monospace</item>
        <item name='android:gravity'>center</item>
        <item name='android:letterSpacing'>0.1</item>
        <item name='android:layout_marginStart'>4dp</item>
        <item name='android:layout_marginEnd'>4dp</item>
        <item name='android:textColor'>@color/black</item>
        <item name='android:textSize'>32sp</item>
    </style>


    <!--    ESTILO DE BOTONES PARA CALCULADORA     -->
    <style name='Theme.201.Botones_calculadora' parent='TextAppearance.AppCompat.Small'>
        <item name='android:layout_weight'>1</item>
        <item name='android:layout_height'>match_parent</item>
        <item name='backgroundTint'>@color/fondo_boton_cal</item>
        <item name='android:layout_marginStart'>4dp</item>
        <item name='android:layout_marginEnd'>4dp</item>
        <item name='android:textColor'>@color/black</item>
        <item name='android:textStyle'>bold</item>
    </style>
    <!--    ESTILO DE FONDO DETRAS DE BOTONES  PARA CALCULADORA     -->
    <style name='Theme.201.Practica_2_cuadros' parent='Theme.T201'>
        <item name='android:layout_width'>1dp</item>
        <item name='android:layout_height'>match_parent</item>
        <item name='android:layout_weight'>6</item>
        <item name='android:gravity'>center</item>
        <item name='android:orientation'>vertical</item>
        <item name='android:weightSum'>1</item>
    </style>
    <!--    ESTILO DE IMAGENES DE PRACTICA 2    -->
<!--    alpha se usa para darle una opacidad respecto al total '1' y asi tener una mejor presentacion -->
    <style name='Theme.201.Practica_2_imagenes' parent='Theme.T201'>
        <item name='android:layout_width'>80dp</item>
        <item name='android:layout_height'>1dp</item>
        <item name='android:fillColor'>@color/practica_2_imagenes</item>
        <item name='android:tint'>@color/practica_2_imagenes</item>
        <item name='android:layout_weight'>0.5</item>
        <item name='android:alpha'>0.6</item>
    </style>
    <!--     ESTILO DE TEXTO PARA BOTONES      -->
    <style name='Theme.201.Practica_2_text_2' parent='TextAppearance.AppCompat.Caption'>
        <item name='android:layout_width'>wrap_content</item>
        <item name='android:layout_height'>wrap_content</item>
        <item name='android:textColor'>@color/white</item>
    </style>
    <!--     ESTILO DE BOTONES EN SCROLL       -->
    <style name='Theme.201.Practica_3_button' parent='Theme.T201'>
        <item name='android:layout_width'>wrap_content</item>
        <item name='android:layout_height'>wrap_content</item>
        <item name='android:layout_margin'>16dp</item>
        <item name='android:padding'>24dp</item>
    </style>
    <!--     ESTILO DE TEXTO PARA BOTONES SCROLL VERTICAL    -->
    <style name='Theme.201.Practica_3_button_vertical' parent='Theme.201.Practica_3_button'>
        <item name='android:layout_width'>wrap_content</item>
        <item name='android:layout_height'>wrap_content</item>
        <item name='android:text'>Vertical</item>
        <item name='backgroundTint'>@color/practica_2_rosa</item>
    </style>
    <!--    ESTILO DE TEXTO PARA BOTONES SCROLL HORIZONTAL    -->
    <style name='Theme.201.Practica_3_button_horizontal' parent='Theme.201.Practica_3_button'>
        <item name='android:layout_width'>wrap_content</item>
        <item name='android:layout_height'>wrap_content</item>
        <item name='android:text'>Horizontal</item>
        <item name='backgroundTint'>@color/practica_2_verde</item>
    </style>

    <!--SWITCH -->
</resources>