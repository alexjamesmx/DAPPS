<?xml version="1.0" encoding="utf-8"?>
<!--CREAMOS PLANTILLA LINEAR LAYOUT COMO PADRE YA QUE A MI PARECER ES EL MAS
FACIL E INTITUIVO DE MANIPULAR YA QUE SOLO CONTENDRA 2 HIJOS DIRECTOS SIENDO
HORIZONTAL VIEW Y NESTED SCROLL VIEW-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Practica_3_Activity"
    android:orientation="vertical">
<!-- HORIZONTAL SCROLL CON UN SOLO HIJO SIENDO OTRO LAYOUT PARA AGREGAR MAS HIJOS EN EL Y NO CAUSAR ERRORES-->
<!--   CON UN VIEWPORT DE 1/3 DEL TOTAL-->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <!--SIMPLES BOTONES DE RELLENO PARA VISUALIZAR LA FUNCIONALIDAD DE LOS SCROLLS
mandando sus estilos a otro archivo y asi reutilizar estilos y evitarnos de mucho codigo-->
            <Button
                style='@style/Theme.201.Practica_3_button_horizontal'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_horizontal'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_horizontal'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_horizontal'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_horizontal'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_horizontal'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_horizontal'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_horizontal'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_horizontal'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_horizontal'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_horizontal'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_horizontal'
                />
        </LinearLayout>
    </HorizontalScrollView>
<!--   NESTED SCROLL VERTICAL CON UN HIJO LAYOUT PARA MAS HIJOS EN EL Y NO CAUSAR ERRORES-->
    <!--   CON UN VIEWPORT DE 2/3 DEL TOTAL-->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/cyan"
            android:gravity="center|top">
<!--SIMPLES BOTONES DE RELLENO PARA VISUALIZAR LA FUNCIONALIDAD DE LOS SCROLLS
mandando sus estilos a otro archivo y asi reutilizar estilos y evitarnos de mucho codigo-->
            <Button
                style='@style/Theme.201.Practica_3_button_vertical'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_vertical'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_vertical'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_vertical'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_vertical'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_vertical'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_vertical'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_vertical'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_vertical'
                />
            <Button
                style='@style/Theme.201.Practica_3_button_vertical'
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>