<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:letterSpacing="0.5"
        android:layout_marginVertical="16dp" />
    <Button
        android:id="@+id/btn_PrimerEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Primer Ejercicio"
        android:layout_margin="8dp"/>
    <Button
        android:id="@+id/btn_SegundoEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Linear Layout"
        android:layout_margin="8dp"/>
    <Button
        android:id="@+id/btn_TercerEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NestedScrollView"
        android:layout_margin="8dp"/>
    <Button
        android:id="@+id/btn_CuartoEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tarjeta Presentacion"
        android:layout_margin="8dp"/>
    <Button
        android:id="@+id/btn_QuintoEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ConstraintLayout"
        android:layout_margin="8dp"/>
    <Button
        android:id="@+id/btn_SextoEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Controles Entrada"
        android:layout_margin="8dp"/>
    <Button
        android:id="@+id/btn_SeptimoEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Controles de Seleccion"
        android:layout_margin="8dp"/>
        <Button
            android:id="@+id/btn_OctavoEjercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Table layout"
            android:layout_margin="8dp"/>
        <Button
            android:id="@+id/btn_Practica2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Practica2"
            android:layout_margin="8dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>